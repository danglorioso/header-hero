{
    "name": "header-hero",
    "displayName": "Header Hero - Quick & Easy Code Headers",
    "description": "Automatically insert customizable headers and function contracts into your code, making documentation quick and effortless.",
    "version": "1.0.0",
    "publisher": "DanGlorioso",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/danglorioso/header-hero"
    },
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "commands": [
            {
                "command": "headerHero.insertHeader",
                "title": "Insert Header Template into File or Directory"
            },
            {
                "command": "headerHero.insertFunctionContract",
                "title": "Insert Function Contract Template"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Header Hero Configuration",
			"properties": {
                "headerHero.headerTemplate": {
                    "type": "string",
                    "default": "standard",
                    "enum": ["standard", "detailed", "minimal", "custom"],
                    "enumDescriptions": [
                        "Standard header template with basic details.",
                        "Detailed header template with additional fields.",
                        "Minimal header template with essential information only.",
                        "Custom header template defined by the user."
                    ],
                    "enumItemLabels": [
                        "Standard",
                        "Detailed",
                        "Minimal",
                        "Custom"
                    ],
                    "description": "Select the header template to be used."
                },
                "headerHero.customTemplate": {
                    "type": "string",
                    "default": "/**************************************************************\n *\n *                ${fileName}\n *\n *     Assignment: \n *         Author: \n *           Date: ${date}\n *\n *     Summary: \n *\n **************************************************************/\n",
                    "description": "Define your custom header template. Use ${fileName} for the file name and ${date} for the current date."
                }
            }
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.26.0",
        "typescript": "^5.4.2"
    }
}
